<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Grid Bubble Show/Hide"
    Height="Auto" Width="370" MinHeight="200"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
    BorderBrush="#4A69B0" BorderThickness="2"
    FontFamily="Segoe UI">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F1926" Offset="0.0"/>
            <GradientStop Color="#2A4359" Offset="0.25"/>
            <GradientStop Color="#0F1926" Offset="0.5"/>
            <GradientStop Color="#2A4359" Offset="0.75"/>
            <GradientStop Color="#0F1926" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Main content area -->
        <StackPanel Margin="5" Height="Auto" MinHeight="120" Grid.Row="0" Grid.ColumnSpan="2" Width="300">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Radio Button-->
                <StackPanel Grid.Column="0">
                    <RadioButton x:Name="UI_radio_start"
                                 Content="Start"
                                 Foreground="AliceBlue"
                                 FontWeight="Bold"
                                 IsChecked="True"
                                 Margin="0,5,20,0"/>

                    <RadioButton x:Name="UI_radio_end"
                                 Content="End"
                                 Foreground="AliceBlue"
                                 FontWeight="Bold"
                                  Margin="0,20,20,0"/>

                    <RadioButton x:Name="UI_radio_show_both"
                                 Content="Show Both"
                                 Foreground="AliceBlue"
                                 FontWeight="Bold"
                                 Margin="0,20,20,0"/>

                    <RadioButton x:Name="UI_radio_hide_both"
                                 Content="Hide Both"
                                 Foreground="AliceBlue"
                                 FontWeight="Bold"
                                 Margin="0,20,20,0"/>
                </StackPanel>

                <!--Note to check-->
                <Border Grid.Column="1"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="NOTE:"
                                   Foreground="AntiqueWhite"
                                   FontWeight="Bold"
                                   Margin="5,5,5,5"/>

                        <TextBlock Text="To determine the best option for your selection, start by choosing the 'Hide Both' button. This will allow you to see how it affects the visibility of the bubbles on both ends."
                                   TextWrapping="Wrap"
                                   Foreground="#D2D6D9"
                                   Margin="5,0,5,5"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!--separator-->
            <Separator Margin="0,10,0,10" Background="#2AA4F0"/>

            <StackPanel>
                <!--Checkbox for multiple views-->
                <CheckBox x:Name ="UI_apply_view"
                          Content="Apply to Parallel Views"
                          Foreground="AntiqueWhite"
                          FontWeight="Bold"
                          Width="150"
                          Margin="0,10,0,10"/>

                <!--Search box-->
                <DockPanel Margin="0,5,0,5">
                    <TextBlock Text="Search View" Margin="0,0,5,5" Foreground="AntiqueWhite"/>
                    <TextBox x:Name="UI_search"/>
                </DockPanel>

                <!--Listbox for views-->
                <ListBox x:Name="UI_listbox"
                         Height="150"
                         SelectedIndex="0"
                         Margin= "0,0,0,20">
                    <ListBoxItem>
                        <CheckBox Content="View1"/>
                    </ListBoxItem>

                </ListBox>

            </StackPanel>

            <!--separator-->
            <Separator Margin="0,0,0,15" Background="#2AA4F0"/>

            <!--button-->
            <Button Content="Submit" Width="150" Click="UIe_button_run" Foreground="White" Background="#4B5770" FontWeight="Bold"
                    BorderBrush="White" BorderThickness="0.5"/>
        </StackPanel>

        <!-- Footnote area -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="jmsg.20250102.hk"
                   Margin="5"
                   Foreground="AntiqueWhite"
                   FontSize="9"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"/>

        <!-- Image area -->
        <Image x:Name="UI_img"
               Width="100"
               Grid.Row="1" Grid.Column="1"
               Margin="5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               Visibility="Collapsed"/>
    </Grid>
</Window>
