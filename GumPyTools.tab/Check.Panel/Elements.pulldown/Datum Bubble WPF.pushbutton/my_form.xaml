<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Grid Bubble Show/Hide"
    Height="Auto" Width="370" MinHeight="200"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
    BorderBrush="#4A69B0" BorderThickness="2"
    FontFamily="Segoe UI">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F1926" Offset="0.0"/>
            <GradientStop Color="#2A4359" Offset="0.25"/>
            <GradientStop Color="#0F1926" Offset="0.5"/>
            <GradientStop Color="#2A4359" Offset="0.75"/>
            <GradientStop Color="#0F1926" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Main content area -->
        <StackPanel Margin="5" Height="Auto" MinHeight="120" Grid.Row="0" Grid.ColumnSpan="2" Width="300">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Radio Buttons Row 1-->
                <RadioButton x:Name="UI_radio_start"
                             Content="Start"
                             Foreground="AliceBlue"
                             FontWeight="Bold"
                             IsChecked="True"
                             Grid.Column="0"
                             Grid.Row="0"
                             HorizontalAlignment="Left"
                             Margin="30,20,20,0"/>

                <RadioButton x:Name="UI_radio_end"
                             Content="End"
                             Foreground="AliceBlue"
                             FontWeight="Bold"
                             Grid.Column="1"
                             Grid.Row="0"
                             HorizontalAlignment="Left"
                             Margin="50,20,0,0"/>

                <!--Radio Buttons Row 2-->
                <RadioButton x:Name="UI_radio_show_both"
                             Content="Show Both"
                             Foreground="AliceBlue"
                             FontWeight="Bold"
                             Grid.Column="0"
                             Grid.Row="1"
                             HorizontalAlignment="Left"
                             Margin="30,20,20,0"/>

                <RadioButton x:Name="UI_radio_hide_both"
                             Content="Hide Both"
                             Foreground="AliceBlue"
                             FontWeight="Bold"
                             Grid.Column="1"
                             Grid.Row="1"
                             HorizontalAlignment="Left"
                             Margin="50,20,0,0"/>
            </Grid>

            <!--button-->
            <Button Content="Apply" Width="150" Click="UIe_button_apply" Foreground="White"
                    Background="#4B5770" FontWeight="Bold" BorderBrush="White" BorderThickness="0.5"
                    Margin="5,20,5,5"/>

            <!--separator-->
            <Separator Margin="0,10,0,10" Background="#2AA4F0"/>

            <StackPanel>
                <!--Checkbox for multiple views-->
                <CheckBox x:Name="UI_apply_view"
                          Checked="UIe_apply_check"
                          Unchecked="UIe_apply_uncheck"
                          Content="Apply to Parallel Views"
                          IsChecked="False"
                          Foreground="AntiqueWhite"
                          FontWeight="Bold"
                          Width="150"
                          Margin="0,10,0,10"/>

                <!--Search box-->
                <DockPanel Margin="0,5,0,5">
                    <TextBlock Text="Search View" Margin="0,0,5,5" Foreground="AntiqueWhite"/>
                    <TextBox x:Name="UI_search" TextChanged="UIe_search_text"/>
                </DockPanel>

                <!--Listbox for views-->
                <ListBox x:Name="UI_listbox"
                         Height="200"
                         SelectedIndex="0"
                         Margin="0,0,0,20">
                    <ListBoxItem>
                        <!--<CheckBox Content="View1"/>-->
                    </ListBoxItem>
                </ListBox>
            </StackPanel>

            <!--separator-->
            <Separator Margin="0,0,0,15" Background="#2AA4F0"/>

            <!--button-->
            <Button Content="Submit" Width="150" Click="UIe_button_run" Foreground="White" Background="#4B5770" FontWeight="Bold"
                    BorderBrush="White" BorderThickness="0.5"/>
        </StackPanel>

        <!-- Footnote area -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="jmsg.20250102.hk"
                   Margin="5"
                   Foreground="AntiqueWhite"
                   FontSize="9"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"/>

        <!-- Image area -->
        <Image x:Name="UI_img"
               Width="100"
               Grid.Row="1" Grid.Column="1"
               Margin="5"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               Visibility="Collapsed"/>
    </Grid>
</Window>
